{
  "name": "typescript-template",
  "version": "1.0.5",
  "description": "A template for starting new typescript projects",
  "main": "./src/index.ts",
  "type": "module",
  "author": "Adarah <lucasyharada@gmail.com>",
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc",
    "start": "node --experimental-specifier-resolution=node dist/index.js",
    "start:dev": "tsc && concurrently -n 'tsc,nodemon' 'tsc -w' 'nodemon'",
    "test": "jest",
    "prepare": "husky install",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx --max-warnings=0",
    "docker:build": "DOCKER_BUILDKIT=1 docker build -t <PROJECT_NAME> .",
    "release": "HUSKY=0 standard-version --sign"
  },
  "dependencies": {
    "async-mqtt": "^2.6.1",
    "pg": "^8.6.0",
    "pg-pool": "^3.3.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.1",
    "@types/pg": "^8.6.1",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "commitizen": "^4.2.4",
    "concurrently": "^6.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "standard-version": "^9.3.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "tsconfig.json"
      ]
    },
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "extends": [
      "airbnb-typescript",
      "prettier",
      "plugin:jest/recommended"
    ],
    "env": {
      "jest/globals": true
    }
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    "coverage"
  ],
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    }
  },
  "nodemonConfig": {
    "watch": [
      "dist"
    ],
    "ext": "js,json",
    "exec": "node --experimental-specifier-resolution=node dist/index.js"
  }
}
